@model Aviato.Models.Avion

@{
    ViewBag.Title = "Edit";
}

<h2></h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h3>Izmeni podatke aviona</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.AvionId)

        <div class="form-group">
            @Html.LabelFor(model => model.SifraAviona, "Šifra aviona", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SifraAviona, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SifraAviona, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.GodinaProizvodnje, "Godina proizvodnje", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.GodinaProizvodnje, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GodinaProizvodnje, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ServisniStatus, "Servisni status", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-10">
                <div class="checkbox ml-4 pl-3">
                    @Html.EditorFor(model => model.ServisniStatus)
                    @Html.ValidationMessageFor(model => model.ServisniStatus, "", new { @class = "text-danger" })
                    <span style="color: orange;"> Na servisu</span>
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TipAviona, "Tip aviona", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-10">
                @Html.DropDownList("TipAviona", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TipAviona, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Izmeni" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Nazad na listu aviona", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
