@model Aviato.Models.Let

@{
    ViewBag.Title = "Edit";
}
<link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />
<h2></h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h3>Izmeni let</h3>
    <hr />
    <div class="form-horizontal ml-md-5 pl-md-3">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.LetId)
        <div class="text-danger">@Html.Raw(ViewBag.Greska)</div>

        <div class="form-group">
            @Html.LabelFor(model => model.Destinacija, "Destinacija", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Destinacija", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Destinacija, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.VremePoletanja, "Vreme poletanja", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.VremePoletanja, new { htmlAttributes = new { @class = "form-control datetimepicker3" } })
                @Html.ValidationMessageFor(model => model.VremePoletanja, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Avion, "Avion", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Avion", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Avion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Pilot, "Pilot", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Pilot", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Pilot, "", new { @class = "text-danger" })
                @Html.ValidationMessageFor(model => model.Zaposleni, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Kopilot, "Kopilot", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Kopilot", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Kopilot, "", new { @class = "text-danger" })
                @Html.ValidationMessageFor(model => model.Zaposleni1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="stjuardi">
            <div class="form-group">
                @Html.LabelFor(model => model.Stjuard1, "Stjuard1", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("Stjuard1", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Stjuard1, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Stjuard2, "Stjuard2", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("Stjuard2", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Stjuard2, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        @{
            var n = Model.NepotpunaPosada;
        }

        @if (n == 1)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.NepotpunaPosada, "Popuni posadu", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NepotpunaPosada, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NepotpunaPosada, "", new { @class = "text-danger" })
                </div>
            </div>
        }


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Izmeni" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Nazad na listu letova", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
<script src="~/Scripts/moment.min.js"></script>
<script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
<script type="text/javascript">
    function insertCalendar() {
        $('.datetimepicker3').datetimepicker({
            format: 'M/DD/YYYY'
        });
    }
    insertCalendar()
</script>
<script src="~/Scripts/stjuardiPoDestinaciji.js"></script>