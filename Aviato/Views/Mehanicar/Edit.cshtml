@model Aviato.Models.Mehanicar

@{
    ViewBag.Title = "Edit";
}
<link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Mehanicar</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MehanicarId)

        @Html.HiddenFor(model => model.Licenca)

        <div class="form-group">
            @Html.LabelFor(model => model.DatumLicence, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DatumLicence, new { htmlAttributes = new { @class = "form-control datetimepicker3" } })
                @Html.ValidationMessageFor(model => model.DatumLicence, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
<script src="~/Scripts/moment.min.js"></script>
<script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
<script type="text/javascript">
    function insertCalendar() {
        $('.datetimepicker3').datetimepicker({
            format: 'M/DD/YYYY'
        });
    }
    insertCalendar()
</script>
