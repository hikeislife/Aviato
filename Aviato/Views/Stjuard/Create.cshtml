@model Aviato.Models.RegisterViewModel

@*STJUARD create*@

@{
    Layout = null;
}

<h4>Dodavanje jezika za stjuarda</h4>
<hr />
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="form-group ovdedodaj">
    @Html.LabelFor(model => model.Stjuard.JezikId, "Jezik", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10 target">
        
        @Html.DropDownListFor(model => model.Stjuard.JezikId, new SelectList(ViewBag.JezikId, "Value", "Text"), "Izaberite jezik", new { @class = "form-control izabraniJezik", @style = "display: inline-block;", @onchange = "uzmiTxtJezika(this.options[this.selectedIndex].text)" })
        @Html.ValidationMessageFor(model => model.Stjuard.JezikId, "", new { @class = "text-danger" })

        <input id="JeziciUnos" type="hidden" name="JeziciZaUnos" value="" />
        <span class="fas fa-plus-circle plus-jezik"></span>

        <div id="ispis-jezika-box">
            <span id="jezikPoruka" style="display: none; color: red;">Vec ste izabrali ovaj jezik</span>
            <span id="jezikPoruka1" style="display: none; color: red;">Molim izaberite jezik</span>
        </div>
    </div>

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script src="~/Scripts/stjuard.js"></script>